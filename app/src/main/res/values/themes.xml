<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="Theme.GenesisAndroidApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Color palette -->
        <item name="colorPrimary">@color/terminal_fg</item>
        <item name="colorPrimaryVariant">@color/terminal_accent</item>
        <item name="colorOnPrimary">@android:color/black</item>
        <item name="colorSecondary">@color/terminal_accent</item>
        <item name="colorSecondaryVariant">@color/terminal_highlight</item>
        <item name="colorOnSecondary">@android:color/black</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/terminal_fg</item>

        <!-- Status bar -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:navigationBarColor">@color/background</item>
        <item name="android:windowLightNavigationBar">false</item>

        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/terminal_fg</item>
        <item name="android:textColorSecondary">@color/terminal_highlight</item>
        <item name="android:textColor">@color/terminal_fg</item>

        <!-- Dialogs -->
        <item name="alertDialogTheme">@style/ThemeOverlay.MaterialComponents.Dialog.Alert</item>
        <item name="dialogTheme">@style/ThemeOverlay.MaterialComponents.Dialog</item>

        <!-- Material Components Styles -->
        <item name="materialButtonStyle">@style/Widget.MaterialComponents.Button</item>
        <item name="editTextStyle">@style/Widget.MaterialComponents.TextInputEditText</item>
        <item name="textInputStyle">@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox
        </item>
        <item name="cardViewStyle">@style/Widget.MaterialComponents.CardView</item>

        <!-- TextInputLayout -->
        <item name="boxBackgroundMode">outline</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeColor">@color/terminal_accent</item>
        <item name="hintTextColor">@color/terminal_highlight</item>
        <item name="android:textColorHint">@color/terminal_highlight</item>

        <!-- Switch -->
        <item name="switchStyle">@style/Widget.MaterialComponents.CompoundButton.Switch</item>
        <item name="switchMaterialStyle">@style/Widget.MaterialComponents.CompoundButton.Switch
        </item>

        <!-- Button theming -->
        <item name="materialButtonOutlinedStyle">
            @style/Widget.MaterialComponents.Button.OutlinedButton
        </item>
        <item name="materialButtonTonalStyle">@style/Widget.MaterialComponents.Button.TonalButton
        </item>

        <!-- CardView theming -->
        <item name="cardViewStyle">@style/Widget.MaterialComponents.CardView</item>
        <item name="cardBackgroundColor">@color/surface</item>
        <item name="cardElevation">4dp</item>
        <item name="cardCornerRadius">8dp</item>
    </style>

    <!-- Terminal Text Appearance (used in code) -->
    <style name="TerminalTextAppearance" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/terminal_fg</item>
        <item name="android:shadowColor">@color/terminal_highlight</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">10</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:letterSpacing">0.05</item>
    </style>
</resources>